{
  "name": "toke",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:cloud": "npm run dev --workspace=@toke/cloud",
    "dev:api": "npm run dev --workspace=@toke/api",
    "autoStart:api": "npm run startAuto --workspace=@toke/api",
    "autoStop:api": "npm run stopAuto --workspace=@toke/api",
    "stop": "npm run stop --workspace=@toke/api",
    "build": "npm run build --workspace=@toke/shared && npm run build --workspace=@toke/cloud && npm run build --workspace=@toke/api",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "pm2": "^6.0.8",
    "rimraf": "^6.0.1"
  }
}
