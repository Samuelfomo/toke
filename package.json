{
  "name": "toke",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:cloud": "npm run dev --workspace=@toke/cloud",
    "dev:api": "npm run dev --workspace=@toke/api",
    "build": "npm run build --workspace=@toke/shared && npm run build --workspace=@toke/cloud && npm run build --workspace=@toke/api",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  }
}