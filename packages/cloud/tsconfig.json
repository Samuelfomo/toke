{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // pas "NodeNext" pour Vite
    "moduleResolution": "bundler",
    // idem
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true
    // ðŸš€ clÃ© pour ne plus gÃ©nÃ©rer de JS/JS.map
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ]
}
