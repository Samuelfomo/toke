{
  "name": "@toke/api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "testCreateClient": "tsx scripts/manageClient.ts",
    "testCreateProfile": "tsx scripts/manageProfile.ts",
    "testTokens": "tsx scripts/testTokenGeneration.ts",
    "clean": "rimraf dist server.pid logs/*.log 2>/dev/null || true",
    "build": "npm run clean && tsc",
    "build:check": "node -e \"console.log('✅ Build vérifié')\" dist/master/server.js --version",
    "dev": "tsx src/master/server.ts",
    "dev:watch": "tsx watch --clear-screen=false src/master/server.ts",
    "start:master": "node dist/master/server.js",
    "start:tenant": "node dist/tenant/server.js",
    "start:dev": "NODE_ENV=development npm run start:master",
    "start:prod": "NODE_ENV=production npm run start:master",
    "restart": "npm run stop && sleep 3 && npm run start:master",
    "restartDev": "npm run stop && sleep 3 && npm run start:dev",
    "startAuto": "npm run build && pm2 start ecosystem.config.cjs --env production",
    "startAuto:master": "npm run build && pm2 start ecosystem.config.cjs --only api-master --env production",
    "startAuto:tenant": "npm run build && pm2 start ecosystem.config.cjs --only api-tenant --env production",
    "startAutoDev": "npm run build && pm2 start ecosystem.config.cjs --env development",
    "startAutoDev:master": "npm run build && pm2 start ecosystem.config.cjs --only api-master --env development",
    "startAutoDev:tenant": "npm run build && pm2 start ecosystem.config.cjs --only api-tenant --env development",
    "restartAuto": "npm run build && pm2 restart ecosystem.config.cjs --env production",
    "restartAuto:master": "npm run build && pm2 restart api-master",
    "restartAuto:tenant": "npm run build && pm2 restart api-tenant",
    "reloadAuto": "pm2 reload all",
    "reloadAuto:master": "pm2 reload api-master",
    "reloadAuto:tenant": "pm2 reload api-tenant",
    "stopAuto": "pm2 stop all",
    "stopAuto:master": "pm2 stop api-master",
    "stopAuto:tenant": "pm2 stop api-tenant",
    "deleteAuto": "pm2 delete all",
    "deleteAuto:master": "pm2 delete api-master",
    "deleteAuto:tenant": "pm2 delete api-tenant",
    "logsAuto": "pm2 logs",
    "logsAuto:master": "pm2 logs api-master",
    "logsAuto:tenant": "pm2 logs api-tenant",
    "verifyStartApp": "pm2 list",
    "status": "node scripts/status.js",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "logs": "tail -f logs/app.log 2>/dev/null || echo 'Pas de fichier de log'",
    "logs:tail": "tail -f ./logs/combined.log",
    "logs:error": "tail -f ./logs/err.log",
    "logs:master": "tail -f ./logs/master-pm2-combined.log",
    "logs:tenant": "tail -f ./logs/tenant-pm2-combined.log",
    "logs:clear": "pm2 flush",
    "redisTest": "tsx scripts/manageUserAuth.ts",
    "testCountry": "tsx scripts/countryManager.ts",
    "testCurrency": "tsx scripts/currencyManager.ts",
    "testCountryAuto": "tsx scripts/test.ts",
    "prod": "npm run build && NODE_ENV=production npm run start:master",
    "prod:bg": "npm run build && NODE_ENV=production nohup npm run start:master > logs/app.log 2>&1 &",
    "stop": "node scripts/stop.js",
    "kill": "node scripts/kill.js",
    "nuclear-cleanup": "node scripts/nuclear-cleanup.js",
    "genkey": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "migrate": "npx sequelize-cli db:migrate --env production",
    "migrate:dev": "npx sequelize-cli db:migrate --env development",
    "migrate:undo": "npx sequelize-cli db:migrate:undo:all --env production",
    "status:migrate": "npx sequelize-cli db:migrate:status --env production",
    "migration:create": "npx sequelize-cli migration:create",
    "migration:generate": "npx sequelize-cli migration:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@toke/shared": "file:../shared",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.24",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  }
}
